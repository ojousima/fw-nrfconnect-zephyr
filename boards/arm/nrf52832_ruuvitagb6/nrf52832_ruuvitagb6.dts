/dts-v1/;
#include <nordic/nrf52832_qfaa.dtsi>

/ {
	model = "RuuviTag B6";
	compatible = "nordic,pca10040-dk", "nordic,nrf52832-qfaa",
		     "nordic,nrf52832";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 17 GPIO_INT_ACTIVE_LOW>;
			label = "Red LED 0";
		};
		led1: led_1 {
			gpios = <&gpio0 19 GPIO_INT_ACTIVE_LOW>;
			label = "Green LED 1";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 13 GPIO_PUD_PULL_UP>;
			label = "Push button switch 0";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		sw0 = &button0;
		gpio0 = &gpio0;
	};
};

&adc {
	status ="ok";
};

&gpiote {
	status ="ok";
};

&gpio0 {
	status ="ok";
};

&i2c0 {
	/* Cannot be used together with spi0. */
	/* status = "ok"; */
	sda-pin = <25>;
	scl-pin = <29>;
};

&pwm0 {
	status = "ok";
	ch0-pin = <17>;
	ch0-inverted;
};

&spi1 {
	/* Cannot be used together with i2c0. */
    status = "ok";
    sck-pin = <29>;
	mosi-pin = <25>;
	miso-pin = <28>;
    num-cs = <2>;
    cs-gpios = <&gpio0 3 0>, <&gpio0 8 0>;
	bme280@0 {
	    status = "ok";
		compatible = "bosch,bme280";
		reg = <0x00>;
		label = "BME280";
		spi-max-frequency = <10000000>;
	};
	lis2dh@1 {
	    status = "ok";
		compatible = "st,lis2dh";
		reg = <0x01>;
		label = "LIS2DH";
		spi-max-frequency = <10000000>;
	};
};

arduino_serial: &uart0 {
	status = "ok";
	compatible = "nordic,nrf-uart";
	current-speed = <115200>;
	tx-pin = <4>;
	rx-pin = <5>;
	rts-pin = <30>;
	cts-pin = <31>;
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x32000>;
		};
		slot1_partition: partition@3e000 {
			label = "image-1";
			reg = <0x0003E000 0x32000>;
		};
		scratch_partition: partition@70000 {
			label = "image-scratch";
			reg = <0x00070000 0xa000>;
		};
		storage_partition: partition@7a000 {
			label = "storage";
			reg = <0x0007a000 0x00006000>;
		};
	};
};